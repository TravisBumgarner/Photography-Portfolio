{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ],
      "Components": [
        "src/components"
      ],
      "sharedComponents": [
        "src/sharedComponents"
      ],
      "types": [
        "src/types"
      ],
      "Containers": [
        "src/containers"
      ],
      "Views": [
        "src/views"
      ],
      "Theme": [
        "src/theme.js"
      ],
      "Utilities": [
        "src/utilities"
      ]
    },
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
}