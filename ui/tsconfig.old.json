{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ],
      "sharedComponents": [
        "src/sharedComponents"
      ],
      "sharedTypes": [
        "src/sharedTypes/index.ts"
      ],
      "theme": [
        "src/theme.js"
      ],
      "utilities": [
        "src/utilities"
      ]
    },
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
}